user  nginx;
worker_processes  1;

pid        /var/run/nginx.pid;

events {
    worker_connections  1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile        off;
    keepalive_timeout  65;
    gzip  on;

    server {
        listen       80;
        server_name  _;
        return 301 https://$host$request_uri;
    }

    server {
        listen 443 ssl;
        server_name ${URL_API};

        ssl_certificate /etc/nginx/ssl/${CRT_FILENAME_API};
        ssl_certificate_key /etc/nginx/ssl/${KEY_FILENAME_API};

        ssl_session_cache shared:SSL:5m;

        location / {
            client_max_body_size 5m;
            client_body_buffer_size 32k;
            proxy_http_version 1.1;
            proxy_set_header   Upgrade $http_upgrade;
            proxy_set_header   Connection keep-alive;
            proxy_set_header   Host $host;
            proxy_cache_bypass $http_upgrade;
            proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header   X-Forwarded-Proto $scheme;

            proxy_pass http://api;
        }
    }

    server {
        listen 443 ssl;
        server_name ${URL_FRONT};

        ssl_certificate /etc/nginx/ssl/${CRT_FILENAME_FRONT};
        ssl_certificate_key /etc/nginx/ssl/${KEY_FILENAME_FRONT};

        ssl_session_cache shared:SSL:5m;

        location / {
            proxy_http_version 1.1;
            proxy_set_header   Upgrade $http_upgrade;
            proxy_set_header   Connection keep-alive;
            proxy_set_header   Host $host;
            proxy_cache_bypass $http_upgrade;
            proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header   X-Forwarded-Proto $scheme;
            proxy_pass http://front;
        }
    }
}